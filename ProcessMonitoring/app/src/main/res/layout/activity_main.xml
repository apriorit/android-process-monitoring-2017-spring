<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnHide"
        android:onClick="HideApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide application" />
    <Button
        android:id="@+id/OpenDeviceManagementActivity"
        android:onClick="OpenDeviceManagementActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenDeviceManagementActivity" />
    <Button
        android:id="@+id/btnShowBlacklist"
        android:onClick="ShowBlacklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show blacklist" />
    <Button
        android:id="@+id/activate_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Admin"
        android:onClick="onClick"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deactivate_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activate_admin"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Deactivate Admin"
        android:textSize="22dp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/listViewBlacklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
